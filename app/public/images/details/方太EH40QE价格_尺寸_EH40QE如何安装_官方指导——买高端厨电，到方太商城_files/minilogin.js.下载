    //                alert(res.Message);
    //                //_this.lay.closed();
    //                console.log(res)
    //            }
    //        }
    //    });
    //}
    //修改
    var _this = this;
    $.ajax({
        url: "/UserHandler.ashx",
        data: {
            action: 'regByMobile',
            username: option.username,
            pwd: option.pwd,
            repwd: option.repwd,
            proto: option.proto,
            code: $('#txbCodeR').val()
        },
        dataType: "text",
        type: "post",
        success: function (d) {
            var res = eval("(" + d + ")");
            if (res.issuccess == 1) {
                try {
                    _BFD.UserAction("Register", { "uid": res.UserId, "phone_number": option.username });
                } catch (e) {

                }
                alert('注册成功，直接登录');
                py('event', 'register', '{20171027}').track('gV.GO2.5fyZBZTbfvWfMsp-PtNwoP');
                //_this.lay.closed();
                location.reload();
            } else {
                alert(res.data.msg);
                //_this.lay.closed();
                console.log(res)
            }
        }
    });
}

    welcome.prototype.submitRegByMail = function (option) {
        /*
          邮箱注册
        */
        var _this = this;
        $.ajax({
            url: "/UserHandler.ashx",
            data: {
                action: 'regByMail',
                username: option.username,
                pwd: option.pwd,
                repwd: option.repwd,
                code: option.code,
                proto: option.proto
            },
            dataType: "text",
            type: "post",
            success: function (d) {
                var res = eval("(" + d + ")");
                if (res.issuccess == 1) {
                    alert('注册成功，直接登录');
                    //_this.lay.closed();
                    location.reload();
                } else {
                    if (res.data.code == "E006") {
                        _this.error('#codeByImg', "验证码错误", 0, function () {
                            $('.imgCode img').attr('src', "/Vcode.aspx?t=" + new Date().getTime());
                        });
                    } else {
                        alert(res.data.msg);
                    }
                }
            }
        });
    }

    welcome.prototype.submitFindPwd = function (option) {
        /*
            修改密码
        */
        var _this = this;
        $.ajax({
            url: "/handle.aspx",
            data: {
                action: 'finduppwd',
                mobile: option.mobile,
                pwd: option.pwd,
                repwd: option.repwd,
                code: option.code
            },
            dataType: "text",
            type: "post",
            success: function (res) {

                if (res == 1) {
                    alert('修改成功，去登录');
                    //_this.lay.closed();
                    _this.show('login');
                    //location.reload();
                } else {
                    alert("修改失败");
                    //_this.lay.closed();
                }
            }
        });
    }

    welcome.prototype.error = function (selector, errMsg, flag, fn) {
        /*
        输出提示信息：
        selector--提示信息关联选择器, 
        errMsg--提示信息, 
        flag--可选，成功或失败状态，默认失败状态
        */
        var el = $(selector);
        var tips = el.parent().find('.tips');
        if (tips.size() > 0) {
            tips.html('<i class="icon-status"></i>' + errMsg);
        } else {
            tips = $('<span class="tips"><i class="icon-status"></i>' + errMsg + '</span>').insertAfter(el);
        }
        if (flag) {
            tips.addClass('success').removeClass('error').html('<i class="icon-status"></i>');
        } else {
            tips.addClass('error').removeClass('success');
        }

        if (fn && typeof fn == "function") {
            fn();
        }
    }
    $.lgs = new welcome();



});
